<div id="modalAddRevenue" class="modal">

    <div class="modal-content revenue">
        <div class="modal-header">
            <h2>Adicionar Receita</h2>
            <span class="close">&times;</span>
        </div>
        form(action="/revenues/" method="POST" id="revenueForm")
            <div class="modal-body">
                <div class="form-group">
                    <p>Adicione o titulo da receita</p>
                    <input type="text" id="tituloReceita" name="title" placeholder="Titulo...">
                </div>
                <div class="form-group">
                    <p>Adicione o valor da receita</p>
                    <input type="number" id="valorReceita" name="value" placeholder="Valor...">
                </div>
                <div class="form-group">
                    <p>Data da receita</p>
                    <input type="date" id="dateRevenue" name="date" placeholder="06/12/2020...">
                </div>
            </div>
            <div class="modal-footer">
                <button class="add" id="btnAddReceita">Adicionar</button>
            </div>
    </div>

    script.
        const modalAddRevenue = document.getElementById("modalAddRevenue");
        const spanCloseModalAddRevenue = document.querySelector("#modalAddRevenue .close");

        const titleRevenue = document.getElementById("tituloReceita");
        const valueRevenue = document.getElementById("valorReceita");
        const formRevenue  = document.getElementById("revenueForm");

        function openModalRevenue(){
            modalAddRevenue.style.display = "block";
        }

        spanCloseModalAddRevenue.onclick = function() {
            modalAddRevenue.style.display = "none";
        }

        document.getElementById("btnAddReceita").onclick = function(e) {    
            e.preventDefault();

            if (titleRevenue.value === "" || valueRevenue.value === "") {
                alert("Todos os campos são obrigatórios");
                return;
            }

            if (Number(valueRevenue.value) <= 0) {
                alert("Por favor insira um valor válido para receita");
                return;
            }

            formRevenue.submit();

            modalAddRevenue.style.display = "none";
        }
</div>

